{
  "name": "ricos-driver",
  "version": "7.16.6",
  "author": {
    "name": "Oded Soffrin",
    "email": "odeds@wix.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix-incubator/rich-content.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wix-incubator/rich-content/issues"
  },
  "homepage": "https://github.com/wix-incubator/rich-content/tree/master/packages/ricos-driver",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/es/index.js",
  "style": "dist/styles.min.css",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "rollup --environment DYNAMIC_IMPORT,MODULE_NAME:ricos-driver -c ../../../rollup.config.js",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:analyze:editor": "npm run build -- --environment MODULE_ANALYZE_EDITOR  && open stats.html",
    "build:analyze:viewer": "npm run build -- --environment MODULE_ANALYZE_VIEWER && open stats.html",
    "watch": "cross-env NODE_ENV=development MODULE_WATCH=1 npm run build -- --watch.chokidar",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,d.ts}'",
    "test": "jest --verbose",
    "test:watchAll": "jest --verbose --watchAll"
  },
  "peerDependencies": {
    "@babel/runtime": "7.2.0",
    "classnames": "^2.0.0",
    "lodash": "^4.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/runtime": "7.2.0",
    "babel-jest": "^25.1.0",
    "classnames": "^2.0.0",
    "concurrently": "^5.2.0",
    "cross-env": "^5.2.0",
    "jest": "^26.0.1",
    "rollup": "1.31.1",
    "ts-is-present": "^1.1.1",
    "ts-jest": "^25.5.0"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/../../../babel.jest.monorepo.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "unpkg": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
