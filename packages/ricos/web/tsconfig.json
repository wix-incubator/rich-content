{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["dom", "ESNext"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "."
  },
  "include": ["src"],
  "exclude": ["dist"]
}
