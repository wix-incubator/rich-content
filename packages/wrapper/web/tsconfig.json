{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES5",
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.*"]
}
