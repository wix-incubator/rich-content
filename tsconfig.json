{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./external-types.d.ts"
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES5",
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
