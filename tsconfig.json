{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./external-types.d.ts"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2019",
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "files": ["external-types.d.ts"],
  "include": ["packages", "packages/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
